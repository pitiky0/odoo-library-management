<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author_id"/>
                <field name="year"/>
                <field name="isbn"/>
            </list>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_library_rent_wizard)d" 
                        string="Rent Book" 
                        type="action" 
                        class="oe_highlight"
                        invisible="state == 'rented'"/> 
                        <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_id"/>
                            <field name="year"/>
                        </group>
                        <group>
                            <field name="isbn"/>
                            <field name="active"/>
                            <field name="rating" widget="star_rating"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_root" name="Library" sequence="10"/>
    <menuitem id="menu_library_books" name="Books" parent="menu_library_root" action="action_library_book" sequence="10"/>
</odoo>
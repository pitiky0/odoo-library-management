<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_rent_wizard_form" model="ir.ui.view">
        <field name="name">library.rent.wizard.form</field>
        <field name="model">library.rent.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="member_id"/>
                        <field name="return_date"/>
                    </group>
                    <footer>
                        <button string="Rent" name="action_rent_book" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_rent_wizard" model="ir.actions.act_window">
        <field name="name">Rent Book</field>
        <field name="res_model">library.rent.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_library_book"/>
        <field name="context">{'default_book_id': active_id}</field>
    </record>

</odoo>
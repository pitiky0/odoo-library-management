<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_library_book" model="ir.actions.report">
        <field name="name">Book List</field>
        <field name="model">library.book</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library_app.report_book_list_template</field>
        <field name="report_file">library_app.report_book_list_template</field>
        <field name="print_report_name">'Library Books List'</field>
        <field name="binding_model_id" ref="model_library_book"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_book_list_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center mb-4">Library Books Catalogue</h2>
                    
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Year</th>
                                <th>ISBN</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td><span t-field="o.name"/></td>
                                    <td><span t-field="o.author_id.name"/></td>
                                    <td>
                                        <span t-field="o.year" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <td><span t-field="o.isbn"/></td>
                                    <td>
                                        <span t-if="o.state == 'available'" class="text-success">Available</span>
                                        <span t-if="o.state == 'rented'" class="text-danger">Rented</span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="footer text-center mt-4">
                        <small>Total Books: <span t-esc="len(docs)"/></small>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>